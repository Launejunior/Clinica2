@model IEnumerable<Clinica2.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1><button type="button" class="btn btn-success">Paciente</button></h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-outline-info">Crear Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Convenio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convenio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-success">Editar</a> |

                    <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-warning">Detalhes</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Deletar</a>
                      

                   
            </td>
        </tr>
}
    </tbody>
</table>

